{
  "name": "big",
  "displayName": "Big Note",
  "publisher": "Christina",
  "repository": {
    "type": "git",
    "url": "https://github.com/Christina0215/vscode-extension/"
  },
  "description": "帮你写出更大的注释/Easily create multi-line note in any language",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:big.bigger"
  ],
  "main": "./out/extension.js",
  "icon": "viagra.jpeg",
  "contributes": {
    "commands": [
      {
        "command": "big.bigger",
        "title": "Bigger"
      }
    ],
    "configuration": {
      "title": "Big",
      "properties": {
        "Big.font": {
          "type": "string",
          "default": "SimSun",
          "description": "font used for output,see:https://developer.mozilla.org/en-US/docs/Web/CSS/font#examples"
        },
        "Big.size": {
          "type": "integer",
          "default": 32,
          "description": "font size used for output"
        },
        "Big.character": {
          "type": "string",
          "default": "#",
          "description": "character used for output"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "@vscode/test-electron": "^1.6.2"
  }
}